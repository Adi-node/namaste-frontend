# NAMASTE Backend Configuration

# Database Configuration (Supabase)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Authentication Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_256_bits_long
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key_minimum_256_bits
REFRESH_TOKEN_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100           # Maximum requests per window per IP
LOGIN_RATE_LIMIT_WINDOW_MS=300000  # 5 minutes for login attempts
LOGIN_RATE_LIMIT_MAX=5       # Maximum login attempts per IP

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
AUDIT_LOG_FILE=./logs/audit.log
AUDIT_LOG_RETENTION_DAYS=365
ERROR_LOG_FILE=./logs/error.log

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads

# Health Check
HEALTH_CHECK_INTERVAL=300000  # 5 minutes

# Additional Security Headers
HSTS_MAX_AGE=31536000  # 1 year
CONTENT_SECURITY_POLICY=default-src 'self'

# Database Pool Configuration (if needed)
DB_POOL_MIN=2
DB_POOL_MAX=10